{% extends 'layouts/main.twig' %}

{% block content %}
    <h2>User list</h2>
    {% if users is empty %}
        <p>No users found.</p>
    {% else %}
        <ul>
            {% for user in users %}
                <li>
                    <a href="/user/{{ user.id }}">{{ user.name }} ({{ user.email }})</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
